  "type"        : "project",
  "require"     : {
    "php"                        : "^8.4",
    "ollieread/popcorn-framework": "*@dev"
  },
  "require-dev" : {
  },
  "license"     : "MIT",
  "autoload"    : {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
    ]
  },
  "bin"         : [
  ],
  "authors"     : [
    {
      "name" : "Ollie Read",
      "email": "code@ollieread.com"
    }
  ],
  "config"      : {
    "allow-plugins": {
      "infection/extension-installer": true
