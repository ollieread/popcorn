{
  "name"        : "ollieread/popcorn-framework",
  "description" : "A macro-framework for PHP â€” a \"just-enough\" framework that gives you structure, clarity, and flexibility without the bloat.",
  "type"        : "project",
  "require"     : {
    "php"          : "^8.4",
    "psr/container": "^2.0"
  },
  "require-dev" : {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit"          : "^12.1",
    "infection/infection"      : "^0.29.14",
    "phpstan/phpstan"          : "^2.1",
    "vlucas/phpdotenv"         : "^5.6"
  },
  "license"     : "MIT",
  "autoload"    : {
    "psr-4": {
      "Popcorn\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
    ]
  },
  "bin"         : [
  ],
  "provides"    : {
    "psr/container-implementation": "1.0.0"
  },
  "authors"     : [
    {
      "name" : "Ollie Read",
      "email": "code@ollieread.com"
    }
  ],
  "config"      : {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "scripts"     : {
    "test"   : [
      "@php vendor/bin/phpunit"
    ],
    "analyse": [
      "@php vendor/bin/phpstan analyse --memory-limit=2G --verbose --ansi"
    ],
    "dev"    : [
      "@php -S localhost:8000 -t public"
    ]
  }
}
